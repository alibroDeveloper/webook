/*页头start  */

.fixed-header {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 99;
}

.header {
  display: flex;
  flex-direction: column;
  
  position: relative;
  justify-content: center;
  /* height: 100%; */
}

.index-header {
  background-color: rgba(12,12,12, 0);
  position: relative;
  width: 100%;
  display: flex;
  padding-top: 50rpx;
  justify-content: center;
}

/*title start  */

.title {
  padding-top: 30rpx;
  padding-bottom: 20rpx;
   font-size: 38rpx; 
}

.title text {
  color: white;
}

/*title end  */

/*scancode start  */

.scanCode {
  height: 64px;
  width: 64px;
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  z-index: 999;
}

/*scancode end  */

/*搜索框start  */

.location {
  width: 100rpx;
  height: 100rpx;
  padding: 0;
  background: none;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0;

}

.location image {
  width: 50%;
  height: 50rpx;
  /* z-index: 999; */
}

.location text {
  font-size: 25rpx;
  color: white;
  text-decoration: underline;
}

.search-container {
  display: flex;
  flex-direction: row;
  position: relative;
  justify-content: center;
  align-items: center;
}

.search {
  width: 70%;
  /* height: 100rpx; */
  /* padding-top: 20rpx;*/
   padding-bottom: 20rpx; 
}

.serarch-content {
  background: rgba(255, 255, 255, 0.28);
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0;
  /* padding-left: 20rpx; */
  padding-bottom: auto;
  margin: auto;
  margin-top: 0;
   height: 60rpx; 
  border-radius: 5px 5px;
  overflow: hidden;
}

.search-icon {
  width: 40rpx;
   height: 40rpx; 
   margin-right: 0.5rem; 
   margin-left: 0.5rem; 
}

.search-input {
  width: 500rpx;
  font-size: 28rpx;
  color: white;
}

.search-btn {
  width: 150rpx;
  /* height: 100%; */
  background-color: rgba(242, 155, 118, 0.8);
  font-size: 28rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  padding: 5rpx;
  /* padding-bottom: 70rpx; */
}

/*搜索框end  */

/*页头end  */


/*分类导航start  */

/*nav-box  */

.nav-box {
  margin: 0;
  position: relative;
  width: 100%;

  
}






.category-nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  height: 200rpx;
  font-size: 25rpx;
}


.category {
  display: flex;
  flex-direction: column;
  width: 20%;
  justify-content: center;
  color: white;
  font:bold;
  align-items: center;
    padding-left: 10rpx; 
   padding-right: 10rpx;  
}

.category image {
  width: 100rpx;
  height: 50%;
  border-radius: 50%;
  /* border : 2px solid black; */
}

.category text{
}

/*分类导航end  */






/*banner start  */

.banner-box {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  /* background-color: black; */
  /* background-color: rgba(242, 155, 118, 0.8); */
   height: 300rpx; 
   overflow: hidden;
  width: 100%;
}


.banner-wrp {
  width: 90%;
  height: 70%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  overflow: hidden;
}

.banner-wrp image{
  width: 100%;
}
.banner-wrp swiper{
  height: 100%;
  width: 100%;
}
.banner-wrp swiper-item{
  
  height: 100%;
  width: 100%;
}


/*banner end  */

/*副标题start  */



.sub-title {
  margin-top: 20rpx;
  position: relative;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  border-left: 2px solid gray;
  color: darkred;
  font-size: 32rpx;
  font-style: italic;
}



/*副标题 end  */

/*精选start  */

.store-list-wrp {
  width: 100%;
}

.store-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.store {
  display: flex;
  flex-direction: column;
  width: 240rpx;
   /* background-color: rgba(12, 12, 12, 0.05);  */
  /* margin-bottom: 20rpx; */
  position: relative;
  justify-content: center;
  border: 1px solid darkgray;
  margin: 2rpx;
  margin-top: 20rpx;
}

.store image {
  width: 100%;
  height: 240rpx;
  background-color: transparent;
  /* border: 1px solid darkgray; */
}

.store-location {
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  justify-content: flex-start;
  align-items: center;
  color: gray;
}

.store-location image {
  width: 35rpx;
  height: 35rpx;
  background: none;
  padding: 10rpx;
}

/*精选end  */